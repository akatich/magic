<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar" > <!-- parent="Theme.AppCompat.Light.DarkActionBar" -->
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/berkshire_swash</item>
        <item name="android:actionBarStyle">@style/MyActionBarTheme</item>
    </style>

    <style name="MyActionBarTheme" >
        <item name="android:background">#FF0000</item>
    </style>

    <style name="PlayerName">
        <item name="android:textSize">70sp</item>
        <item name="android:color">@android:color/darker_gray</item>
    </style>

    <style name="myText">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/berkshire_swash</item>
        <item name="android:color">@android:color/darker_gray</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/dialog_open</item>
        <item name="android:windowExitAnimation">@anim/dialog_close</item>
    </style>

    <style name="dialogButtonLife">
        <item name="android:fontFamily">@font/berkshire_swash</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:radius">10dp</item>
        <item name="android:background">@drawable/button_inactive</item>
    </style>

</resources>
